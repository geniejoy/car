{
    "globals": {
        "__TS_CONFIG__": "tsconfig.json"
    },
    "collectCoverage": true,
    "moduleFileExtensions": [
        "ts",
        "js"
    ],
    "transform": {
        "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
        "**/src/**/*.spec.(ts|js)",
        "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node",
    "collectCoverageFrom": [
        "**/src/**/*.ts"
    ] 
}